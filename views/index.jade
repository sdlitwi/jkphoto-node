extends layout
block content
      #carousel-example-generic.carousel.slide(style='max-width: 750px; margin: 0 auto')
        // Indicators
        ol.carousel-indicators.hidden-xs
          li.active(data-target='#carousel-example-generic', data-slide-to='0')
          li(data-target='#carousel-example-generic', data-slide-to='1')
          li(data-target='#carousel-example-generic', data-slide-to='2')
          li(data-target='#carousel-example-generic', data-slide-to='3')
        // Wrapper for slides
        .carousel-inner
          .item.active
            img.img-responsive.img-full(src='/slideshow/3.jpg', alt='')
          .item
            img.img-responsive.img-full(src='/slideshow/1.jpg', alt='')
          .item
            img.img-responsive.img-full(src='/slideshow/2.jpg', alt='')
          .item
            img.img-responsive.img-full(src='/slideshow/4.jpg', alt='')
        // Controls
        a.left.carousel-control(href='#carousel-example-generic', data-slide='prev')
          span.icon-prev
        a.right.carousel-control(href='#carousel-example-generic', data-slide='next')
          span.icon-next
      script.
        // Activates the Carousel
        $(function () {
        $('.carousel').carousel({
        interval: 5000
        })
        });
